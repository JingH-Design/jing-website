{
  "name": "jing-website",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./_site/* ./assets/css/*",
    "build:css": "tailwindcss build ./tailwind/styles.css -c ./tailwind/config.js -o ./assets/css/styles.css",
    "prestart": "run-s clean build:css",
    "start:jekyll": "jekyll serve -l -P 4001",
    "start": "run-p start:jekyll watch:css",
    "watch:css": "onchange './tailwind/*' -- npm run build:css"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "tailwindcss": "^1.3.5"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.0"
  }
}
